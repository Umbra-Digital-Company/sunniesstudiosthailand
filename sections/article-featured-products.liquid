{{ 'article-featured-products.css' | asset_url | stylesheet_tag }}

<div class="article-featured-products">
  <div class="article-featured-products-header">
    <h2>{{ section.settings.title }}</h2>
  </div>
  <div class="article-featured-products-wrapper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          {% render 'product-card' with block.settings.product_select as product_data %}
        </div>
      {% endfor %}
    </div>
    <div class="collection-highlight-pagination"></div>
  </div>
</div>

<script src="{{ 'article-featured-products.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Article Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "max_blocks": 20,
  "blocks": [
    {
      "type": "product",
      "name": "product",
      "settings": [
        {
          "type": "product",
          "id": "product_select",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Article Featured Products"
    }
  ]
}
{% endschema %}
