
  {% comment %} test {% endcomment %}
<div class="flask-sec-d" style="background-color: {{ section.settings.bg_color }}">
  <div class="flask-sec-d__video-mobile">
    {{ section.settings.video_mobile | video_tag: autoplay: true, loop: true, muted: true }}
  </div>
  <div class="flask-sec-d__video-desktop">
    {{ section.settings.video_desktop | video_tag: autoplay: true, loop: true, muted: true }}
  </div>
  <div class="flask-sec-d__info" >
    <h2>{{ section.settings.heading }}</h2>
    <h3>{{ section.settings.subheading }}</h3>
    <a href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
  </div>
</div>

<style> 
  .flask-sec-d__info {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 60px;
    padding-left: 16px;
    padding-right: 16px;
  }
  .flask-sec-d__info > h2 {
    font-family: 'Replica';
    font-size: 22px;
    color: var(--soft-black-700, #352B27);
  }
  .flask-sec-d__info > h3 {
    text-align: center;
    font-family: 'Replica';
    font-size: 14px;
    color: var(--soft-black-700, #352B27);
    margin-top: 8px;
  }
  .flask-sec-d__info > a {
    font-size: 14px;
    font-family: 'Replica';
    color: var(--soft-black-700, #352B27);
    margin-top: 24px;
    line-height: 20px;
    border-bottom: 1px solid var(--soft-black-700, #352B27);
    text-decoration: none;
  }
  .flask-sec-d__video-mobile > video, .flask-sec-d__video-desktop > video {
    width: 100%;
  }
  .flask-sec-d__video-desktop {
    display: none;
  }
  @media only screen and (min-width: 1024px) {
    .flask-sec-d__video-mobile {
      display: none;
    }
    .flask-sec-d__video-desktop {
      display: block;
    }
  }
</style>

{% schema %}
  {
    "name": "Flask Section D",
    "settings": [
      {
        "type": "video",
        "id": "video_mobile",
        "label": "Video (Mobile)"
      },
      {
        "type": "video",
        "id": "video_desktop",
        "label": "Video (Desktop)"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      },
      {
        "type": "text",
        "id": "btn_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "btn_link",
        "label": "Button Link"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#F3F4F1"
      }
    ]
  }
{% endschema %}