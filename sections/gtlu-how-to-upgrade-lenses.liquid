<section class="gtlu-main__how-to-upgrade">
  <h2>{{ section.settings.heading }}</h2>
  {{ section.settings.subheading }}
  <ul>
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'steps' %}
          <li>
            <img src="{{ block.settings.image | image_url }}" />
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.description }}</p>
          </li>
      {% endcase %}
    {% endfor %}
  </ul>
</section>

<style>
  .gtlu-main__how-to-upgrade {
    font-size: 14px;
    font-family: 'Radio Grotesk';
    color: var(--black_color);
    max-width: 768px;
    margin: 0 auto;
    padding: 0 40px;
  }
  .gtlu-main__how-to-upgrade > h2 {
    font-family: 'AT Surt Medium';
    margin: 0;
    font-size: 28px;
  }
  .gtlu-main__how-to-upgrade > p {
    margin-top: 24px;
  }
  .gtlu-main__how-to-upgrade > p > a {
    color: inherit;
  }
  .gtlu-main__how-to-upgrade > ul {
    list-style: none;
  }
  .gtlu-main__how-to-upgrade > ul > li > img {
    width: 100%;
    margin-top: 40px;
    border: 0.3px solid var(--gray_color);
  }
  .gtlu-main__how-to-upgrade > ul > li > h3 {
    font-family: 'AT-Surt-Semibold';
    font-size: 14px;
    margin-top: 24px;
    line-height: 150%;
  }
  .gtlu-main__how-to-upgrade > ul > li > p {
    margin-top: 16px;
  }
  @media only screen and (min-width: 769px) {
    .gtlu-main__how-to-upgrade {
      padding: 0;
      font-size: 16px;
    }
   .gtlu-main__how-to-upgrade > ul {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 16px;
    }
    .gtlu-main__how-to-upgrade > ul > li > h3 {
      font-size: 16px;
    }
  }
</style>
{% schema %}
  {
    "name": "GTLU How to Upgrade",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "subheading",
        "label": "Subheading"
      }
    ],
    "blocks": [
      {
        "name": "Steps",
        "type": "steps",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "textarea",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "GTLU How to Upgrade"
      }
    ]
  }
{% endschema %}
