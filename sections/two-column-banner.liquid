<div id="anti-rad-section-shop-now">
  <div id="one" style="background: url('{{ section.settings.first_column_banner }}'); background-size: cover; margin: 0 12px 0 0;">
    <span id="show-now-label">{{ section.settings.first_column_label }}</span>
    <a id="show-now-btn" href="{{ section.settings.first_column_url }}">{{ section.settings.first_column_text }}</a>
  </div>
  <div id="two" style="background: url('{{ section.settings.second_column_banner }}'); background-size: cover; margin: 0 12px 0 0;">
    <span id="show-now-label">{{ section.settings.second_column_label }}</span>
    <a id="show-now-btn" href="{{ section.settings.second_column_url }}">{{ section.settings.second_column_text }}</a>
  </div>
</div>

