      },
      {
        "type": "text",
        "id": "first_column_label",
        "label": "First Column Label"
      },
      {
        "type": "text",
        "id": "first_column_text",
        "label": "First Column CTA Text"
      },
      {
        "type": "url",
        "id": "first_column_url",
        "label": "First Column CTA Link"
      }, {
        "type": "url",
        "id": "second_column_banner",
        "label": "Second Column Image (.PNG/.JPG/.GIF)"
      }, {
        "type": "text",
        "id": "second_column_label",
        "label": "Second Column Label"
      }, {
        "type": "text",
        "id": "second_column_text",
        "label": "Second Column CTA Text"
      }, {
        "type": "url",
        "id": "second_column_url",
        "label": "Second Column CTA Link"
      }
    ],
    "presets": [
      {
        "name": "Two Column Banner"
      }
    ]
  }
