<div class="fifty2-antirad-pdp">
  <div class="fifty2-antirad-pdp__info">
    <h3>{{ section.settings.heading }}</h3>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.link }}">{{ section.settings.link_text }}</a>
  </div>
  <div class="fifty2-antirad-pdp__media">
    {% if section.settings.video != blank %}
      {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true }}
    {% elsif section.settings.image != blank %}
      <img src="{{ section.settings.image | image_url }}" />
    {% endif %}
  </div>
</div>
<style>
  .fifty2-antirad-pdp__info {
    padding: 60px 16px;
    background-color: var(--black_color);
    color: #fff;
    font-family: 'Radio Grotesk';
  }
  .fifty2-antirad-pdp__info h3 {
    font-family: 'AT Surt Medium';
    font-size: 20px;
  }
  .fifty2-antirad-pdp__info p {
    font-size: 14px;
    margin-top: 24px;
  }
  .fifty2-antirad-pdp__info a {
    font-family: 'AT Surt Medium';
    color: #fff;
    text-decoration: none;
    font-size: 14px;
    padding-bottom: 4px;
    border-bottom: 1.5px solid #fff;
    margin-top: 24px;
    line-height: 100%;
    display: inline-block;
  }
  .fifty2-antirad-pdp__media {
    padding-bottom: 100%;
    position: relative;
  }
  .fifty2-antirad-pdp__media img,
  .fifty2-antirad-pdp__media video {
    position: absolute;
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
  @media only screen and (min-width: 769px) {
    .fifty2-antirad-pdp {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }
    .fifty2-antirad-pdp__info {
      padding: 60px 100px;
      display: flex;
      flex-direction: column;
      align-items: baseline;
      justify-content: center;
    }
    .fifty2-antirad-pdp__info h3 {
      font-size: 32px;
    }
    .fifty2-antirad-pdp__info p,
    .fifty2-antirad-pdp__info a {
      font-size: 16px;
      margin-top: 40px;
    }
  }
</style>
{% schema %}
  {
    "name": "50/50 Anti-Rad Adptv PDP",
    "settings": [
      {
        "type": "header",
        "content": "Details"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link Text",
        "default": "Learn more about Anti-Rad Eyewear"
      }, {
        "type": "url",
        "id": "link",
        "label": "Link"
      }, {
        "type": "header",
        "content": "Media"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }, {
        "type": "video",
        "id": "video",
        "label": "Video",
        "info": "Overrides Image"
      }
    ]
  }
{% endschema %}