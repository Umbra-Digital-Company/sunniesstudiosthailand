{%- assign _section = section.settings -%}
{%- assign section_title = _section.title -%}
{%- assign section_btn_text = _section.btn_text -%}
{%- assign section_btn_url = _section.btn_url -%}

{% if section.blocks.size > 0 %}
<section class="section-job-highlights">
    <div class="shell">
        <div class="section__inner">
            {% if section_title != blank %}
            <header class="section__head">
                <h2>{{section_title}}</h2>
            </header><!-- /.section__head -->
            {% endif %}

            <div class="section__body">
                <table class="table-jobs">
                    <tr>
                        <th>Job</th>

                        <th>Department</th>

                        <th>Location</th>
                    </tr>

                    {%- for block in section.blocks -%}
                    {%- assign _block = block.settings -%}
                    {%- assign block_job_url = _block.job_url -%}
                    {%- assign block_text_job = _block.title -%}
                    {%- assign block_text_department = _block.text_department -%}
                    {%- assign block_text_location = _block.text_location -%}

                    <tr>
                        <td>
                            <div class="table-jobs__entry table-jobs__entry--uppercase table-jobs__entry--arrow">
                                <a href="{{block_job_url}}"></a>

                                <p>{{block_text_job}}</p>

                                <div class="table-jobs__mobile">
                                    <p>{{block_text_department}}</p>
                                    
                                    <p>{{block_text_location}}</p>

                                    <span>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="13" viewBox="0 0 16 13">
                                            <path fill="#B3A89B"
                                                d="M.8 7.2c-.442 0-.8-.358-.8-.8 0-.442.358-.8.8-.8h12.469L9.034 1.366c-.312-.313-.312-.82 0-1.132C9.191.078 9.395 0 9.6 0c.205 0 .41.078.566.234l5.6 5.6c.312.313.312.82 0 1.132l-5.6 5.6c-.313.312-.82.312-1.132 0-.312-.313-.312-.82 0-1.132L13.27 7.2H.8z" />
                                        </svg>
    
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="13" viewBox="0 0 16 13">
                                            <path fill="#352b27
    
                                            "
                                                d="M.8 7.2c-.442 0-.8-.358-.8-.8 0-.442.358-.8.8-.8h12.469L9.034 1.366c-.312-.313-.312-.82 0-1.132C9.191.078 9.395 0 9.6 0c.205 0 .41.078.566.234l5.6 5.6c.312.313.312.82 0 1.132l-5.6 5.6c-.313.312-.82.312-1.132 0-.312-.313-.312-.82 0-1.132L13.27 7.2H.8z" />
                                        </svg>
                                    </span>
                                </div><!-- /.table-jobs__mobile -->
                            </div><!-- /.table-jobs__entry -->
                        </td>

                        <td>
                            <div class="table-jobs__entry">
                                <a href="{{block_job_url}}"></a>

                                <p>{{block_text_department}}</p>
                            </div><!-- /.table-jobs__entry -->
                        </td>

                        <td>
                            <div class="table-jobs__entry table-jobs__entry--arrow">
                                <a href="{{block_job_url}}"></a>

                                <p>{{block_text_location}}</p>

                                <span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="13" viewBox="0 0 16 13">
                                        <path fill="#B3A89B"
                                            d="M.8 7.2c-.442 0-.8-.358-.8-.8 0-.442.358-.8.8-.8h12.469L9.034 1.366c-.312-.313-.312-.82 0-1.132C9.191.078 9.395 0 9.6 0c.205 0 .41.078.566.234l5.6 5.6c.312.313.312.82 0 1.132l-5.6 5.6c-.313.312-.82.312-1.132 0-.312-.313-.312-.82 0-1.132L13.27 7.2H.8z" />
                                    </svg>

                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="13" viewBox="0 0 16 13">
                                        <path fill="#352b27

                                        "
                                            d="M.8 7.2c-.442 0-.8-.358-.8-.8 0-.442.358-.8.8-.8h12.469L9.034 1.366c-.312-.313-.312-.82 0-1.132C9.191.078 9.395 0 9.6 0c.205 0 .41.078.566.234l5.6 5.6c.312.313.312.82 0 1.132l-5.6 5.6c-.313.312-.82.312-1.132 0-.312-.313-.312-.82 0-1.132L13.27 7.2H.8z" />
                                    </svg>
                                </span>
                            </div><!-- /.table-jobs__entry -->
                        </td>
                    </tr>
                    {%- endfor -%}
                </table><!-- /.table-jobs -->
            </div><!-- /.section__body -->

            {% if section_btn_url != blank %}
            <div class="section__actions">
                <a href="{{section_btn_url}}" class="btn btn--lightbrown">{{section_btn_text}}</a>
                <!-- /.btn btn--lightbrown -->
            </div><!-- /.section__actions -->
            {% endif %}
        </div><!-- /.section__inner -->
    </div><!-- /.shell -->
</section><!-- /.section-job-highlights -->
{% endif %}


{% schema %}
{
"name": "Job highlights",
"settings": [
{
"type": "text",
"id": "title",
"label": "Title"
},
{
"type": "text",
"id": "btn_text",
"label": "Button text"
},
{
"type": "url",
"id": "btn_url",
"label": "Button url"
}
],
"max_blocks": 9999,
"blocks": [
{
"type": "job",
"name": "Job",
"settings": [
{
"type": "url",
"id": "job_url",
"label": "Url"
},
{
"type": "text",
"id": "title",
"label": "Job"
},
{
"type": "text",
"id": "text_department",
"label": "Department"
},
{
"type": "text",
"id": "text_location",
"label": "Location"
}
]
}
]
}
{% endschema %}