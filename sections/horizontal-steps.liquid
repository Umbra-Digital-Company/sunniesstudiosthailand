{{ 'horizontal-steps.css' | asset_url | stylesheet_tag }}

<div class="horizontal-steps-container">
  <div class="horizontal-steps-wrapper">
    <h2>{{ section.settings.title }}</h2>
    <p class="horizontal-steps-description">{{ section.settings.description }}</p>
    <div class="horizontal-steps-inner-wrapper">
      {% for block in section.blocks %}
        <div class="horizontal-step-item">
          <img src="{{ block.settings.image }}" loading="lazy">
          <h5>Step {{ forloop.index }}</h5>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Horizontal Steps",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "max_blocks": 3,
  "blocks": [
    {
      "name": "Step",
      "type": "slide",
      "settings": [
        {
          "type": "url",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Horizontal Steps"
    }
  ]
}
{% endschema %}
