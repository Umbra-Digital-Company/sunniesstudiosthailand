<div class="fifty2-optical-pdp">
  <div class="fifty2-optical-pdp__info">
    <h2>{{ section.settings.heading }}</h2>
    <a class="link-desktop" href="{{ section.settings.link }}">{{ section.settings.link_text }}</a>
    <div>
      <h3>{{ section.settings.prescription_type }}</h3>
      <ul>
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'prescription_type_item' %}
              <li>{{ block.settings.prescription_type_item_text }}</li>
          {% endcase %}
        {% endfor %}
      </ul>
    </div>
    <div>
      <h3>{{ section.settings.lens_upgrades }}</h3>
      <ul>
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'lens_upgrades_item' %}
            <li>{{ block.settings.lens_upgrades_item_text }}</li>
          {% endcase %}
        {% endfor %}
      </ul>
    </div>
    <a class="link-mobile" href="{{ section.settings.link }}">{{ section.settings.link_text }}</a>
  </div>
  <div class="fifty2-optical-pdp__media">
    {% if section.settings.video != blank %}
      {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true }}
    {% elsif section.settings.image != blank %}
      <img src="{{ section.settings.image | image_url }}" />
    {% endif %}
  </div>
</div>

<style>
  .fifty2-optical-pdp__info {
    background-color: var(--black_color);
    color: #fff;
    padding: 60px 16px;
    font-family: 'Radio Grotesk';
    display: flex;
    flex-direction: column;
    gap: 24px;
    font-size: 14px;
  }
  .fifty2-optical-pdp__info div {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
  .fifty2-optical-pdp__info h2 {
    font-family: 'AT Surt Medium';
    font-size: 28px;
  }
  .fifty2-optical-pdp__info h3 {
    font-family: 'AT-Surt-SemiBold';
    font-size: 14px;
  }
  .fifty2-optical-pdp__info a {
    color: #fff;
    text-decoration: none;
    padding-bottom: 4px;
    border-bottom: 1.5px solid #fff;
    line-height: 100%;
  }
  .fifty2-optical-pdp__info .link-mobile {
    align-self: center;
  }
  .fifty2-optical-pdp__info .link-desktop {
    display: none;
    align-self: start;
  }
  .fifty2-optical-pdp__media {
    padding-bottom: 100%;
    position: relative;
  }
  .fifty2-optical-pdp__media img, .fifty2-optical-pdp__media video {
    position: absolute;
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
  @media only screen and (min-width: 769px) {
    .fifty2-optical-pdp {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }
    .fifty2-optical-pdp__info {
      padding: 60px 100px;
      justify-content: center;
      font-size: 16px;
    }
    .fifty2-optical-pdp__info h2 {
      font-size: 32px;
    }
    .fifty2-optical-pdp__info div {
      margin-top: 16px;
    }
    .fifty2-optical-pdp__info h3 {
      font-size: 16px;
    }
    .fifty2-optical-pdp__info .link-mobile {
      display: none;
    }
    .fifty2-optical-pdp__info .link-desktop {
      display: block;
    }
  }
</style>
{% schema %}
  {
    "name": "50/50 Optical PDP",
    "settings": [
      {
        "type": "header",
        "content": "Details"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Customize your lenses"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link Text",
        "default": "View the full lens guide"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
      {
        "type": "text",
        "id": "prescription_type",
        "label": "Prescription Type Text",
        "default": "Prescription type"
      },
      {
        "type": "text",
        "id": "lens_upgrades",
        "label": "Lens Upgrades Text",
        "default": "Lens upgrades"
      },
      {
        "type": "header",
        "content": "Media"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "video",
        "id": "video",
        "label": "Video",
        "info": "Overrides Image"
      }
    ],
    "blocks": [
      {
        "name": "Prescription Type Item",
        "type": "prescription_type_item",
        "settings": [
          {
            "type": "text",
            "id": "prescription_type_item_text",
            "label": "Text"
          }
        ]
      },
      {
        "name": "Lens Upgrades Item",
        "type": "lens_upgrades_item",
        "settings": [
          {
            "type": "text",
            "id": "lens_upgrades_item_text",
            "label": "Text"
          }
        ]
      }
    ]
  }
{% endschema %}
