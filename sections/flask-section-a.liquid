
  {% comment %} test {% endcomment %}
<div class="flask-sec-a">
  <h3>{{ section.settings.heading }}</h3>
  <div>
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'block' %}
          <div>
             {{ block.settings.image | image_url: width: 40 | image_tag: class: 'flask-sec-a__image' }}
            <p>{{ block.settings.text }}</p>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>

<style>
  .flask-sec-a {
    background-color: {{section.settings.bg_color}};
    padding: 60px 16px;
    color: white;
  }
  .flask-sec-a > h3 {
    text-align: center;
    font-size: 14px;
    font-family: 'Replica';
    margin: 0 auto;
    line-height: 20px;
  }
  .flask-sec-a > div {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    column-gap: 16px;
    row-gap: 24px;
    margin-top: 40px;
    justify-items: center;
  }
  .flask-sec-a > div > div {
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: center;
    width: 100px;
  }
  .flask-sec-a > div > div > p {
    text-align: center;
    font-size: 14px;
    font-family: 'Replica';
  }

  @media only screen and (min-width: 1024px) {
    .flask-sec-a {
      padding: 80px 40px;
    }
    .flask-sec-a > div {
      display: flex;
      gap: 60px;
      justify-content: center;
      margin-top: 72px;
    }
    .flask-sec-a > h3 {
      font-size: 18px;
      max-width: 681px;
      line-height: 27px;
    }
    .flask-sec-a > div > div {
      width: 126px;
    }
  } 
  
</style>

{% schema %}
  {
    "name": "Flask Section A",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#85A5CC"
      }
    ],
    "blocks": [
      {
       "name": "Block",
       "type": "block",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Icon"
         },
         {
           "type": "text",
           "id": "text",
           "label": "Text"
         }
       ]
      }
    ]
  }
{% endschema %}