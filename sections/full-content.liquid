{{ 'full-content-section.css' | asset_url | stylesheet_tag }}

<section class="full-content-section" {% if section.settings.main_content == true  %} id="four-squares" {% endif %}>
  {%- if section.settings.title != blank -%}
    <h2>{{ section.settings.title | escape }}</h2>
  {%- endif -%}
  {%- if section.settings.text != blank -%}
    <div class="{% if section.settings.button_label == blank %}adjustment{% endif %}">
      {{ section.settings.text }}
    </div>
  {%- endif -%}
	{%- if section.settings.button_label != blank -%}
    <div class="block__cta"><a class="btn" href="{{section.settings.button_link}}" target="{{new_window_value}}">{{ section.settings.button_label }}</a></div>
  {%- endif -%}
	{%- if section.settings.image_desktop != blank -%}
		<div class="section__image--desktop">
			<img src="{{section.settings.image_desktop | image_url}}" class="lazyload" />
		</div>
	{%- endif -%}

	{%- if section.settings.image_mobile != blank -%}
		<div class="section__image--mobile">
			<img src="{{section.settings.image_mobile | image_url}}" class="lazyload" />
		</div>  
	{%- endif -%}
</section>

{% schema %}
  {
    "name": "Full Content",
    "settings": [
      {
        "type": "checkbox",
        "id": "main_content",
        "label": "Main Content",
        "default": false
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
			{
				"type": "image_picker",
				"id": "image_desktop",
				"label": "Image Desktop"
			},
			{
					"type": "image_picker",
					"id": "image_mobile",
					"label": "Image mobile"
			}
    ],
    "presets": [{
        "name": "Full Content"
    }]
  }
{% endschema %}
