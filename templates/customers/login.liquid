{{ "account-setup.css" | asset_url | stylesheet_tag }}

<div class="Customer Login">
  {% comment %} {% render '_login-register-header'%} {% endcomment %}

  <div class="form-success hide" data-reset-success>
    <div class="form-success-container">
      <div class="login_header_wrapper">
          <h1>Link sent!</h1>
            <div class="p-gap">
              <p>Thank you for submitting your email address.</p>
              <p>If you already have an account, you will receive an email with the information need to reset your password. </p>
          </div>
        </div>
      </div>
  </div>

  <div data-login-form id="login-form-toggle">
    {% render '_login-form' %}
  </div>

  <div class="hide" data-recover-form>
    {% render '_forgot-password' %}
  </div>
  
</div>

<script>
  const isLoginOne = window.location.pathname.includes("login");
  const loginFormOne = document.getElementById("login-form-toggle");
  const registerFormOne = document.getElementById("register-form-toggle");
  if (isLoginOne) {
  	loginFormOne.setAttribute("class", "");
    registerFormOne.setAttribute("class", "hide");
  } else {
  	loginFormOne.setAttribute("class", "hide");
    registerFormOne.setAttribute("class", "");
  }
    
</script>