                                    href="/cart/change?line={{- forloop.index -}}&amp;quantity=0"
                                    {% if line_item.product.type == 'Optical frame' %}data-cart-remove="true"{% endif %}
                                    class=""
                                    data-vid="{{line_item.id}}"
                                    data-lens-key="{{line_item.properties['_lensLineId']}}">
                                    Remove
                                  </a>
                                  </div>
                                </div>
                              </div>
                            {% endif %}
                          {% endif %} 

